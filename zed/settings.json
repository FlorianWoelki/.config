// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Disabling linked edits because of: https://github.com/zed-industries/zed/issues/25586
  "linked_edits": false,

  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "project_panel": {
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "ui_font_family": "Monaspace Neon",
  "buffer_font_family": "Monaspace Neon",
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },
  // Will be triggered manually with `ctrl-x ctrl-c`.
  "show_edit_predictions": false,
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "theme": "Github Dark",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  // Rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "vim": {
    "use_system_clipboard": "never"
  },
  "languages": {
    "LaTeX": {
      "soft_wrap": "preferred_line_length"
    }
  },
  "wrap_guides": [90],
  "show_wrap_guides": true
  // YouTube Use:
  // "show_wrap_guides": false,
  // "show_edit_predictions": false,
  // "ui_font_size": 26,
  // "buffer_font_size": 26,
  // "preferred_line_length": 75,
  // "soft_wrap": "preferred_line_length",
  // "show_wrap_guides": false,
  // "git": {
  //   "git_gutter": "tracked_files",
  //   "inline_blame": {
  //     "enabled": false
  //   }
  // },
  // "format_on_save": "off"
}
